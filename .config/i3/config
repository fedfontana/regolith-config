###############################################################################
# Constants
###############################################################################

# Meta Key - Alt key is Mod1, and Windows key is Mod4
set $mod Mod4
set $alt Mod1

# Rofi theme file
set $rofiConfig $HOME/.config/rofi/config.rasi

# Workspace Names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

###############################################################################
# General Settings
###############################################################################

title_align center

# Hiding borders adjacent to the screen edges.
# The "smart" setting hides borders on workspaces with only one window visible.
hide_edge_borders smart

# Set the default layout mode
workspace_layout default

# Disable titlebar
default_border pixel 2
default_floating_border pixel 1

# Force every window to have borders
for_window [class=.*] border pixel 2

# Specify the distance between windows in pixels. (i3-gaps)
gaps inner 5
gaps outer 0

# Only enable gaps on a workspace when there is at least one container
smart_gaps on

# Enable popup during fullscreen
popup_during_fullscreen smart

# window focus follows your mouse movements as the mouse crosses window borders
focus_follows_mouse no

workspace_auto_back_and_forth no

